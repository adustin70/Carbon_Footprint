@model CarbonProject.Models.Survey

@{
    ViewData["Title"] = "Survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Carbon Footprint Survey</h1>
@*Need to add comments and descriptions*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Survey">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MilesDriven" class="control-label"></label>
                <input asp-for="MilesDriven" class="form-control" />
                <span asp-validation-for="MilesDriven" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelType" class="control-label"></label>
                <input asp-for="FuelType" class="form-control" />
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlasticBagsUsed" class="control-label"></label>
                <input asp-for="PlasticBagsUsed" class="form-control" />
                <span asp-validation-for="PlasticBagsUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlasticBottlesUsed" class="control-label"></label>
                <input asp-for="PlasticBottlesUsed" class="form-control" />
                <span asp-validation-for="PlasticBottlesUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PowerUsed" class="control-label"></label>
                <input asp-for="PowerUsed" class="form-control" />
                <span asp-validation-for="PowerUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Profile page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
