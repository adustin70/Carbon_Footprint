<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.2/dist/Chart.min.js"></script>

<div class="chart-container">
    <canvas id="average" width="400" height="400" aria-label="Carbon" role="img"></canvas>
</div>

<script>
    window.onload = function () {
        fetch(api_url)
            .then(data => {
                let ctx = document.getElementById('average').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: data.map(x => x.start.substring(8, 10)).sort(),
                        datasets: [{
                            label: 'America',
                            backgroundColor: '#93bd20',
                            data: data.map(x => x.average),
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                scaleLabel: {
                                    display: true,
                                    labelString: 'carbon monoxide [mol/m²]'
                                },
                                ticks: {
                                    beginAtZero: true
                                }
                            }],
                            xAxes: [{
                                scaleLabel: {
                                    display: true,
                                    labelString: 'day'
                                }
                            }]
                        }
                    }
                });
</script>